      <span class="text-gray-200 font-semibold text-sm md:text-base">Figma</span>
    </div>
  </div>
</section>

<style>
  .skill-item {
    transform: translateY(0);
    transition: all 0.3s ease;
    width: 140px;
  }
  
  @media (min-width: 768px) {
    .skill-item {
      width: 160px;
    }
  }
  
  .skill-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(34, 211, 238, 0.2);
  }
</style>
