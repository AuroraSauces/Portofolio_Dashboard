---
// Skills Section Component
---

<section id="skills" class="max-w-7xl mx-auto mt-24 md:mt-32 px-4 md:px-6 scroll-mt-24">
  <div class="text-center mb-16">
    <h2 class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500 mb-4">
      Technical Skills
    </h2>
    <div class="w-24 h-1 bg-gradient-to-r from-cyan-400 to-blue-500 mx-auto rounded-full"></div>
  </div>
  
  <!-- All Skills in One Grid -->
  <div class="flex flex-wrap justify-center gap-4 md:gap-6">
    <!-- Frontend Skills -->
    <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-orange-400 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-orange-500/20 group">
      <i class="fab fa-html5 w-12 h-12 flex items-center justify-center text-4xl md:text-5xl transition-transform duration-300 group-hover:scale-110 text-orange-500"></i>
      <span class="text-gray-200 font-semibold text-sm md:text-base">HTML5</span>
    </div>

    <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-blue-400 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-blue-500/20 group">
      <i class="fab fa-css3-alt w-12 h-12 flex items-center justify-center text-4xl md:text-5xl transition-transform duration-300 group-hover:scale-110 text-blue-500"></i>
      <span class="text-gray-200 font-semibold text-sm md:text-base">CSS3</span>
    </div>

    <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-cyan-500 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-cyan-600/20 group">
      <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/tailwindcss/tailwindcss-original.svg" class="w-12 h-12 transition-transform duration-300 group-hover:scale-110" alt="TailwindCSS" />
      <span class="text-gray-200 font-semibold text-sm md:text-base">TailwindCSS</span>
    </div>

    <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-blue-400 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-blue-500/20 group">
      <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/laravel/laravel-original.svg" class="w-12 h-12 transition-transform duration-300 group-hover:scale-110" alt="VS Code" />
      <span class="text-gray-200 font-semibold text-sm md:text-base">Laravel</span>
    </div>

