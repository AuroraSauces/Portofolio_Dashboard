<section id="contact" class="max-w-2xl mx-auto mt-24 md:mt-32 px-4 md:px-6 text-center scroll-mt-24 mb-16 md:mb-20">
  <div
    class="border border-gray-700 bg-gray-800/60 backdrop-blur-md rounded-2xl shadow-lg p-6 md:p-10 hover:border-cyan-400 transition duration-300 transform hover:scale-[1.01]"
  >
    <div class="mb-8">
      <h2 class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500 mb-4">
        Contact Me
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-cyan-400 to-blue-500 mx-auto rounded-full mb-6"></div>
      <p class="text-gray-300 text-sm md:text-base">
        Interested to know more about me? You can connect with me through the applications below:
      </p>
    </div>

    <div class="flex justify-center gap-6 md:gap-8 mt-6 text-3xl md:text-4xl">
      <a
        href="https://github.com/AuroraSauces"
        target="_blank"
        class="text-gray-400 hover:text-cyan-400 transition transform hover:scale-110"
        aria-label="GitHub"
      >
        <i class="fa-brands fa-github"></i>
      </a>

      <a
        href="https://www.linkedin.com/in/satria-wiguna-670057349/"
        target="_blank"
        class="text-gray-400 hover:text-cyan-400 transition transform hover:scale-110"
        aria-label="LinkedIn"
      >
        <i class="fa-brands fa-linkedin"></i>
      </a>

      <a
        href="mailto:satriawiguna2205@gmail.com"
        class="text-gray-400 hover:text-cyan-400 transition transform hover:scale-110 hover:drop-shadow-[0_0_8px_rgba(34,211,238,0.7)]"
        aria-label="Email"
      >
        <i class="fa-solid fa-envelope"></i>
      </a>
    </div>
  </div>
</section>
