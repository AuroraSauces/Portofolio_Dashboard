<script>
  document.addEventListener('DOMContentLoaded', () => {
    const target = document.getElementById('glitch-text');
    if (!target) return;

    const phrases = ['Full Stack Developer', 'Game Development Enthusiast'];
    const longestPhraseLength = Math.max(...phrases.map((p) => p.length));
    target.style.minWidth = `${longestPhraseLength}ch`;
    target.style.display = 'inline-flex';
    target.style.justifyContent = 'center';
    target.style.textAlign = 'center';
    const chars = '!<>-_\\/[]{}â€”=+*^?#________';
    const holdDuration = 2600;
    let frame = 0;
    let queue = [];
    let frameRequest;
    let phraseIndex = 0;

    const randomChar = () => chars[Math.floor(Math.random() * chars.length)];

    const update = () => {
      let output = '';
      let complete = 0;

      queue.forEach(item => {
        if (frame >= item.end) {
          complete++;
          output += item.to;
          return;
        }

        if (frame >= item.start) {
          output += `<span class="glitch-char">${randomChar()}</span>`;
          return;
        }

        output += item.from;
      });

      target.innerHTML = output;
      target.setAttribute('data-text', phrases[phraseIndex]);
      target.classList.add('glitching');

      if (complete === queue.length) {
        target.textContent = phrases[phraseIndex];
        target.classList.remove('glitching');
        setTimeout(nextPhrase, holdDuration);
        return;
      }

      frame++;
      frameRequest = requestAnimationFrame(update);
    };

    const setText = (newText) => {
      const oldText = target.textContent || '';
      const length = Math.max(oldText.length, newText.length);
      queue = [];

      for (let i = 0; i < length; i++) {
        queue.push({
          from: oldText[i] || '',
          to: newText[i] || '',
          start: Math.floor(Math.random() * 16),
          end: Math.floor(Math.random() * 16) + 16,
        });
      }

      cancelAnimationFrame(frameRequest);
      frame = 0;
      update();
    };

    const nextPhrase = () => {
      phraseIndex = (phraseIndex + 1) % phrases.length;
      setText(phrases[phraseIndex]);
    };

    setTimeout(nextPhrase, holdDuration);
  });
</script>

<style>
  .hero-section {
    position: relative;
    min-height: 100vh;
    scroll-snap-align: start;
    scroll-snap-stop: always;
  }

  .glitch-text {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    letter-spacing: 0.04em;
    color: #e5e7eb;
    min-height: 1.5em;
    padding: 0 0.35rem;
    text-align: center;
    white-space: nowrap;
  }

  .glitch-text::before,
  .glitch-text::after {
    content: attr(data-text);
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;
    pointer-events: none;
  }

  .glitch-text.glitching::before,
  .glitch-text.glitching::after {
    opacity: 0.8;
    mix-blend-mode: screen;
    animation: glitchDrift 0.35s infinite;
  }

  .glitch-text.glitching::before {
    color: rgba(34, 211, 238, 0.9);
    transform: translate(-1px, -1px);
  }

  .glitch-text.glitching::after {
    color: rgba(59, 130, 246, 0.8);
    transform: translate(1px, 1px);
    animation-delay: 0.15s;
  }

  .glitch-char {
    display: inline-block;
    color: rgba(94, 234, 212, 0.9);
    text-shadow:
      0 0 6px rgba(59, 130, 246, 0.8),
      0 0 12px rgba(14, 165, 233, 0.7);
  }

  @keyframes glitchDrift {
    0% {
      transform: translate(0, 0);
    }
    50% {
      transform: translate(2px, -2px);
    }
    100% {
      transform: translate(-1px, 1px);
    }
  }

  .hero-content {
    position: relative;
    z-index: 10;
  }

  .hero-circle {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(34, 211, 238, 0.15) 0%, transparent 70%);
    animation: float 20s ease-in-out infinite;
    filter: blur(30px);
    will-change: transform;
  }

  .hero-circle-1 {
    width: 500px;
    height: 500px;
    top: -250px;
    left: -250px;
    animation-delay: 0s;
  }

  .hero-circle-2 {
    width: 700px;
    height: 700px;
    bottom: -350px;
    right: -350px;
    animation-delay: -7s;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.15) 0%, transparent 70%);
  }

  .hero-circle-3 {
    width: 400px;
    height: 400px;
    top: 50%;
    right: 10%;
    animation-delay: -14s;
    background: radial-gradient(circle, rgba(168, 85, 247, 0.1) 0%, transparent 70%);
  }

  .geometric-shape {
    position: absolute;
    border: 2px solid rgba(34, 211, 238, 0.2);
    animation: rotate 30s linear infinite;
    will-change: transform;
  }

  .shape-1 {
    width: 100px;
    height: 100px;
    top: 15%;
    left: 10%;
    animation-duration: 25s;
  }

  .shape-2 {
    width: 150px;
    height: 150px;
    top: 60%;
    left: 80%;
    border-radius: 50%;
    animation-duration: 35s;
    animation-direction: reverse;
  }

  .shape-3 {
    width: 80px;
    height: 80px;
    top: 25%;
    right: 15%;
    transform: rotate(45deg);
    animation-duration: 20s;
    border-color: rgba(59, 130, 246, 0.2);
  }

  .shape-4 {
    width: 120px;
    height: 120px;
    bottom: 20%;
    left: 25%;
    clip-path: polygon(50% 0%, 100% 50%, 50% 100%, 0% 50%);
    background: linear-gradient(45deg, rgba(34, 211, 238, 0.1), transparent);
    border: none;
    animation-duration: 28s;
  }

  .grid-pattern {
    position: absolute;
    inset: 0;
    background-image: 
      linear-gradient(rgba(34, 211, 238, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(34, 211, 238, 0.03) 1px, transparent 1px);
    background-size: 50px 50px;
    /* Animation removed for better performance */
  }

  #particles-container {
    position: absolute;
    inset: 0;
  }

  .particle {
    position: absolute;
    background: rgba(34, 211, 238, 0.6);
    border-radius: 50%;
    animation: particleFloat linear infinite;
    box-shadow: 0 0 10px rgba(34, 211, 238, 0.8);
    will-change: transform, opacity;
  }

  .glow-effect {
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.25;
    animation: pulse 8s ease-in-out infinite;
    will-change: transform, opacity;
  }

  .glow-1 {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(34, 211, 238, 0.4), transparent);
    top: -200px;
    right: -200px;
    animation-delay: 0s;
  }

  .glow-2 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.3), transparent);
    bottom: -150px;
    left: -150px;
    animation-delay: -4s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    33% {
      transform: translate(50px, -50px) scale(1.1);
    }
    66% {
      transform: translate(-30px, 30px) scale(0.9);
    }
  }

  @keyframes rotate {
    0% {
      transform: rotate(0deg) scale(1);
    }
    50% {
      transform: rotate(180deg) scale(1.2);
    }
    100% {
      transform: rotate(360deg) scale(1);
    }
  }

  @keyframes particleFloat {
    0% {
      transform: translateY(0) translateX(0);
      opacity: 0;
    }
    10% {
      opacity: 1;
    }
    90% {
      opacity: 1;
    }
    100% {
      transform: translateY(-100vh) translateX(50px);
      opacity: 0;
    }
  }

  @keyframes gridMove {
    0% {
      transform: translateY(0);
    }
    100% {
      transform: translateY(50px);
    }
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.5;
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }

  .animate-fade-in-delay {
    animation: fadeIn 1s ease-out 0.3s both;
  }

  .animate-fade-in-delay-2 {
    animation: fadeIn 1s ease-out 0.6s both;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
