<script>
  document.addEventListener('DOMContentLoaded', () => {
    // --- Glitch Text Logic (Existing) ---
    const target = document.getElementById('glitch-text');
    if (target) {
        const phrases = ['Full Stack Developer', 'Game Development Enthusiast'];
        const longestPhraseLength = Math.max(...phrases.map((p) => p.length));
        target.style.minWidth = `${longestPhraseLength}ch`;
        target.style.display = 'inline-flex';
        target.style.justifyContent = 'flex-start';
        target.style.textAlign = 'left';
        
        const chars = '!<>-_\\/[]{}â€”=+*^?#________';
        const holdDuration = 2600;
        let frame = 0;
        let queue = [];
        let frameRequest;
        let phraseIndex = 0;

        const randomChar = () => chars[Math.floor(Math.random() * chars.length)];

        const update = () => {
        let output = '';
        let complete = 0;

        queue.forEach(item => {
            if (frame >= item.end) {
            complete++;
            output += item.to;
            return;
            }

            if (frame >= item.start) {
            output += `<span class="glitch-char">${randomChar()}</span>`;
            return;
            }

            output += item.from;
        });

        target.innerHTML = output;
        target.setAttribute('data-text', phrases[phraseIndex]);
        target.classList.add('glitching');

        if (complete === queue.length) {
            target.textContent = phrases[phraseIndex];
            target.classList.remove('glitching');
            setTimeout(nextPhrase, holdDuration);
            return;
        }

        frame++;
        frameRequest = requestAnimationFrame(update);
        };

        const setText = (newText) => {
        const oldText = target.textContent || '';
        const length = Math.max(oldText.length, newText.length);
        queue = [];

        for (let i = 0; i < length; i++) {
            queue.push({
            from: oldText[i] || '',
            to: newText[i] || '',
            start: Math.floor(Math.random() * 16),
            end: Math.floor(Math.random() * 16) + 16,
            });
        }

        cancelAnimationFrame(frameRequest);
        frame = 0;
        update();
        };

        const nextPhrase = () => {
        phraseIndex = (phraseIndex + 1) % phrases.length;
        setText(phrases[phraseIndex]);
        };

        setTimeout(nextPhrase, holdDuration);
    }

    // --- Tech Icon Swapping Logic ---
    // --- Tech Icon Swapping Logic ---
    const techIcons = [
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/html5/html5-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/css3/css3-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/tailwindcss/tailwindcss-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/javascript/javascript-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/typescript/typescript-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/react/react-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/astro/astro-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/vuejs/vuejs-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/laravel/laravel-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/python/python-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/csharp/csharp-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/cplusplus/cplusplus-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/java/java-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/dot-net/dot-net-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/mysql/mysql-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/nodejs/nodejs-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/git/git-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/github/github-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/unity/unity-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/vscode/vscode-original.svg",
      "https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/figma/figma-original.svg"
    ];

    // Indices of currently displayed icons (initially 0, 1, 2, 3)
    let currentIndices = [0, 1, 2, 3];
    
    // We want to swap one icon every few seconds, sequentially.
    // Slots: 1, 2, 3, 4
    // We can just use a single interval that targets the "next" slot in round-robin.
    
    let nextSlotToUpdate = 0; // 0 to 3
    let nextTechIndex = 4; // Start taking from index 4

    const updateIcon = () => {
        const slotId = `tech-icon-${nextSlotToUpdate + 1}`;
        const img = document.getElementById(slotId);
        
        if (img) {
            // Fade out
            img.style.opacity = '0';
            img.style.transform = 'scale(0.8)'; // Subtle shrink effect
            
            setTimeout(() => {
                // Change source
                img.src = techIcons[nextTechIndex];
                
                // Fade in
                img.style.opacity = '1';
                img.style.transform = 'scale(1)';
                
                // Update indices for next round
                currentIndices[nextSlotToUpdate] = nextTechIndex;
                
                // Advance pointers
                nextTechIndex = (nextTechIndex + 1) % techIcons.length;
                nextSlotToUpdate = (nextSlotToUpdate + 1) % 4; // Cycle through slots 0->1->2->3->0
                
            }, 1000); // Wait 1s for fade out (matches CSS transition)
        }
    };

    // Swap an icon every 3 seconds (so full cycle of 4 slots takes 12s)
    setInterval(updateIcon, 3000); 

  });

</script>

<style>
  /* 3D Container Setup */
  .perspective-container {
    perspective: 1000px;
  }

  .orbit-system {
    transform-style: preserve-3d;
    transform: rotateX(15deg) rotateY(15deg); /* Slight initial tilt */
    animation: floatingTilt 10s ease-in-out infinite;
  }

  .transform-style-3d {
    transform-style: preserve-3d;
  }

  /* Orbit Animation */
  .satellite-orbit-wrapper {
    position: absolute;
    top: 50%;
    left: 50%;
    /* Start at center, then transforms move it out */
    width: 0;
    height: 0;
    transform-style: preserve-3d;
    animation: orbit3D 20s linear infinite;
  }

  /* Individual Delays to space them out (20s / 4 = 5s) */
  .delay-0 { animation-delay: 0s; }
  .delay-neg-5 { animation-delay: -5s; }
  .delay-neg-10 { animation-delay: -10s; }
  .delay-neg-15 { animation-delay: -15s; }

  @keyframes orbit3D {
    0% {
      transform: rotateY(0deg) translateZ(220px); 
    }
    100% {
      transform: rotateY(360deg) translateZ(220px);
    }
  }

  /* Orbit Ring Visual */
  .orbit-ring {
    transform: rotateX(90deg) translateZ(0);
    border-style: solid;
    border-width: 1px;
    opacity: 0.3;
    /* This ring might look weird if it intersects the face roughly. 
       Let's try to match the orbit path roughly.
       The path is a circle in X-Z plane.
       So a div with border-radius 50% rotated X 90deg lies in X-Z plane.
    */
    width: 440px; /* 2 * radius (220) */
    height: 440px;
    top: 50%;
    left: 50%;
    margin-top: -220px;
    margin-left: -220px;
  }

  @keyframes floatingTilt {
     0%, 100% { transform: rotateX(10deg); }
     50% { transform: rotateX(-10deg); }
  }

  /* Fade Animations (Standard) */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  
  .animate-fade-in { animation: fadeIn 1s ease-out; }
  .animate-fade-in-delay { animation: fadeIn 1s ease-out 0.3s both; }
  .animate-fade-in-delay-2 { animation: fadeIn 1s ease-out 0.6s both; }
  
  .animate-spin-slow { animation: spin 10s linear infinite; }
  @keyframes spin { from { transform: rotate(0deg); } to { transform: rotate(360deg); } }
  .animate-gradient-x { background-size: 200% 200%; animation: gradientMove 8s ease infinite; }
  @keyframes gradientMove { 0% { background-position: 0% 50%; } 50% { background-position: 100% 50%; } 100% { background-position: 0% 50%; } }

  .hero-section {
    position: relative;
    min-height: 100vh;
    scroll-snap-align: start;
    scroll-snap-stop: always;
  }

  .glitch-text {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: flex-start; /* Changed from center */
    font-weight: 600;
    letter-spacing: 0.04em;
    color: #e5e7eb;
    min-height: 1.5em;
    padding: 0; /* Removed horizontal padding */
    text-align: left; /* Changed from center */
    white-space: nowrap;
  }

  .glitch-text::before,
  .glitch-text::after {
    content: attr(data-text);
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;
    pointer-events: none;
  }

  .glitch-text.glitching::before,
  .glitch-text.glitching::after {
    opacity: 0.8;
    mix-blend-mode: screen;
    animation: glitchDrift 0.35s infinite;
  }

  .glitch-text.glitching::before {
    color: rgba(34, 211, 238, 0.9);
    transform: translate(-1px, -1px);
  }

  .glitch-text.glitching::after {
    color: rgba(59, 130, 246, 0.8);
    transform: translate(1px, 1px);
    animation-delay: 0.15s;
  }

  .glitch-char {
    display: inline-block;
    color: rgba(94, 234, 212, 0.9);
    text-shadow:
      0 0 6px rgba(59, 130, 246, 0.8),
      0 0 12px rgba(14, 165, 233, 0.7);
  }

  @keyframes glitchDrift {
    0% {
      transform: translate(0, 0);
    }
    50% {
      transform: translate(2px, -2px);
    }
    100% {
      transform: translate(-1px, 1px);
