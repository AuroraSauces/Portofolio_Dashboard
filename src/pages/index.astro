---
import Layout from "../layouts/Layout.astro";

const projects = [
  {
    name: "SeeJTI",
    desc: "A web application for viewing class schedules in the Information Technology department at Politeknik Negeri Malang.",
    img: "/images/SeeJTI.png",
    url: "https://github.com/ForagiFox/SeeJTI",
  },
  {
    name: "SiLapor",
    desc: "A web application for reporting facility damage in the Information Technology department at Politeknik Negeri Malang.",
    img: "/images/Silapor.jpg",
    url: "https://github.com/User-425/SiLapor",
  },
  {
    name: "Portfolio",
    desc: "A personal portfolio project showcasing my work and skills.",
    img: "/images/Portofolio.png",
    url: "https://github.com/AuroraSauces/Portofolio_Dashboard",
  },

  {
    name: "Invitation Automation",
    desc: "A project designed to streamline the process of creating digital invitations.",
    img: "/images/OtoUn.png",
    url: "https://github.com/AuroraSauces/otomasi_undangan",
  },
];
---

<Layout title="Portfolio - Satria Wiguna">
  <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />

  <nav
    class="fixed top-5 left-1/2 transform -translate-x-1/2 bg-gray-900/80 backdrop-blur-md rounded-full px-4 md:px-8 py-3 flex gap-4 md:gap-8 text-gray-300 shadow-lg z-50 text-sm md:text-base"
  >
    <button data-scroll="hero" class="hover:text-cyan-400 transition cursor-pointer whitespace-nowrap">Home</button>
    <button data-scroll="about" class="hover:text-cyan-400 transition cursor-pointer whitespace-nowrap">About</button>
    <button data-scroll="skills" class="hover:text-cyan-400 transition cursor-pointer whitespace-nowrap">Skills</button>
    <button data-scroll="projects" class="hover:text-cyan-400 transition cursor-pointer whitespace-nowrap">Projects</button>
    <button data-scroll="contact" class="hover:text-cyan-400 transition cursor-pointer whitespace-nowrap">Contact</button>
  </nav>

  <section id="hero" class="hero-section h-screen flex items-center justify-center relative overflow-hidden">
    <div class="hero-content text-center px-4 md:px-6 z-10">
            <div class="mb-8 animate-fade-in">
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500 mb-4 px-2 md:px-4 leading-tight py-2">
          Hello I'm Satria Wiguna
        </h1>
        <p class="text-lg md:text-xl lg:text-2xl text-gray-300 mb-2">
          Informatics Engineering Student
        </p>
        <p class="text-base md:text-lg text-gray-400">
          Full Stack Developer & Game Development Enthusiast
        </p>
      </div>
      
      <div class="flex justify-center gap-4 md:gap-6 mb-8 md:mb-12 animate-fade-in-delay">
        <a
          href="https://github.com/AuroraSauces"
          target="_blank"
          class="text-gray-400 hover:text-cyan-400 transition transform hover:scale-110 text-2xl md:text-3xl"
        >
          <i class="fa-brands fa-github"></i>
        </a>
        <a
          href="https://www.linkedin.com/in/satria-wiguna-670057349/"
          target="_blank"
          class="text-gray-400 hover:text-cyan-400 transition transform hover:scale-110 text-2xl md:text-3xl"
        >
          <i class="fa-brands fa-linkedin"></i>
        </a>
      </div>

      <div class="flex flex-col sm:flex-row justify-center items-center gap-4">
      <button
        data-scroll="about"
        class="group inline-flex items-center gap-2 bg-cyan-500/20 text-cyan-300 px-6 md:px-8 py-3 md:py-4 rounded-full border-2 border-cyan-400 hover:bg-cyan-500/30 transition-all duration-300 font-semibold animate-fade-in-delay-2 text-sm md:text-base"
      >
        Explore Portfolio
        <i class="fa-solid fa-arrow-down group-hover:translate-y-1 transition-transform"></i>
      </button>

      <button
        data-scroll="contact"
        class="group inline-flex items-center gap-2 bg-gradient-to-r from-cyan-500 to-blue-500 text-white px-6 md:px-8 py-3 md:py-4 rounded-full hover:from-cyan-400 hover:to-blue-400 transition-all duration-300 font-semibold animate-fade-in-delay-2 text-sm md:text-base"
      >
        Contact Me
        <i class="fa-solid fa-paper-plane group-hover:translate-x-1 transition-transform"></i>
      </button>
      </div>
    </div>

    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="hero-circle hero-circle-1"></div>
      <div class="hero-circle hero-circle-2"></div>
      <div class="hero-circle hero-circle-3"></div>
      
      <div class="geometric-shape shape-1"></div>
      <div class="geometric-shape shape-2"></div>
      <div class="geometric-shape shape-3"></div>
      <div class="geometric-shape shape-4"></div>
      
      <div class="grid-pattern"></div>
      
      <div id="particles-container"></div>
      
      <div class="glow-effect glow-1"></div>
      <div class="glow-effect glow-2"></div>
    </div>

    <div class="absolute bottom-10 left-1/2 transform -translate-x-1/2 animate-bounce">
      <i class="fa-solid fa-chevron-down text-cyan-400 text-2xl"></i>
    </div>
  </section>

  <section id="about" class="max-w-7xl mx-auto mt-24 md:mt-32 px-4 md:px-6 scroll-mt-24">
    <div
      class="border border-gray-700 bg-gray-800/60 backdrop-blur-sm rounded-2xl shadow-lg overflow-hidden hover:border-cyan-400 transition duration-300 transform hover:scale-[1.01]"
    >
      <!-- Profile Section -->
      <div class="flex flex-col lg:flex-row items-center lg:items-start gap-8 md:gap-12 p-6 md:p-10">
        <div class="flex-shrink-0 flex justify-center">
          <div class="relative">
            <img
              src="/images/profile.jpg"
              alt="Profile Photo"
              class="w-40 h-40 md:w-52 md:h-52 rounded-full object-cover border-4 border-cyan-400 shadow-2xl"
            />
            <div class="absolute inset-0 rounded-full bg-gradient-to-tr from-cyan-400/20 to-blue-500/20"></div>
          </div>
        </div>

        <div class="flex-1 space-y-6 md:space-y-8 lg:pl-6 w-full">
          <!-- Main About Section -->
          <div class="space-y-4 md:space-y-6">
            <div class="text-center lg:text-left mb-8">
              <h2 class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500 mb-4">
                About Me
              </h2>
              <div class="w-24 h-1 bg-gradient-to-r from-cyan-400 to-blue-500 mx-auto lg:mx-0 rounded-full"></div>
            </div>
            <div class="bg-gray-900/30 rounded-xl p-6 md:p-8 border border-gray-700/50">
              <p class="text-gray-300 leading-relaxed text-base md:text-lg mb-4 md:mb-6">
                I am a passionate Computer Science student at Politeknik Negeri Malang with a deep fascination for full-stack development, 
                ranging from frontend user interfaces to backend systems and game development. My journey in technology began with curiosity 
                about how digital experiences are crafted, which has evolved into a comprehensive understanding of the entire development stack 
                and modern programming paradigms.
              </p>
              <p class="text-gray-300 leading-relaxed text-base md:text-lg mb-4 md:mb-6">
                Throughout my academic journey, I have developed a strong foundation in various programming languages and frameworks across 
                the full development spectrum. I thrive on solving complex problems through clean, efficient code, whether I'm crafting 
                intuitive user interfaces, building robust backend APIs, or creating immersive gaming experiences. My approach to development 
                emphasizes both technical excellence and user experience, ensuring that every project delivers meaningful value.
              </p>
              <p class="text-gray-300 leading-relaxed text-base md:text-lg">
                I am particularly drawn to the intersection of creativity and technology, where I can combine my technical skills across 
                frontend, backend, and game development to create comprehensive solutions. From responsive web applications to scalable 
                server architectures and interactive gaming experiences, I believe in continuous learning and staying updated with the 
                latest industry trends and best practices across all development domains.
              </p>
            </div>
          </div>

          <!-- Interests & Goals Grid -->
          <div class="grid md:grid-cols-2 gap-6 md:gap-8">
            <div class="bg-gray-900/30 rounded-xl p-6 md:p-8 border border-gray-700/50 hover:border-cyan-400/50 transition-all duration-300">
              <div class="flex items-center gap-2 mb-4 md:mb-6">
                <i class="fa-solid fa-heart text-cyan-400 text-lg"></i>
                <h3 class="text-lg md:text-xl font-semibold text-cyan-300">Interests & Hobbies</h3>
              </div>
              <p class="text-gray-300 leading-relaxed text-sm md:text-base">
                Outside the world of coding, I enjoy playing various games across different genres, which not only provides entertainment but also 
                inspires my game development projects by understanding player psychology and engagement mechanics. I'm an avid anime enthusiast and 
                music lover, finding that these creative mediums often spark new ideas for my technical projects.
              </p>
            </div>

            <div class="bg-gray-900/30 rounded-xl p-6 md:p-8 border border-gray-700/50 hover:border-cyan-400/50 transition-all duration-300">
              <div class="flex items-center gap-2 mb-4 md:mb-6">
                <i class="fa-solid fa-rocket text-cyan-400 text-lg"></i>
                <h3 class="text-lg md:text-xl font-semibold text-cyan-300">Goals & Aspirations</h3>
              </div>
              <p class="text-gray-300 leading-relaxed text-sm md:text-base">
                My long-term goal is to become a versatile full-stack developer who can contribute to innovative projects across all development 
                domains that make a positive impact on users' lives. I aspire to work on cutting-edge technologies spanning frontend interfaces, 
                backend systems, and gaming experiences that can handle complex real-world challenges. I'm always open to collaboration and eager 
                to contribute to open-source projects.
              </p>
            </div>
          </div>

          <!-- Fun Facts or Quick Stats -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6">
            <div class="text-center p-4 md:p-6 bg-gradient-to-br from-cyan-500/10 to-blue-500/10 rounded-xl border border-cyan-500/20">
              <div class="text-xl md:text-2xl font-bold text-cyan-400">2+</div>
              <div class="text-xs md:text-sm text-gray-400">Years Coding</div>
            </div>
            <div class="text-center p-4 md:p-6 bg-gradient-to-br from-purple-500/10 to-pink-500/10 rounded-xl border border-purple-500/20">
              <div class="text-xl md:text-2xl font-bold text-purple-400">10+</div>
              <div class="text-xs md:text-sm text-gray-400">Projects</div>
            </div>
            <div class="text-center p-4 md:p-6 bg-gradient-to-br from-green-500/10 to-emerald-500/10 rounded-xl border border-green-500/20">
              <div class="text-xl md:text-2xl font-bold text-green-400">5+</div>
              <div class="text-xs md:text-sm text-gray-400">Technologies</div>
            </div>
            <div class="text-center p-4 md:p-6 bg-gradient-to-br from-orange-500/10 to-red-500/10 rounded-xl border border-orange-500/20">
              <div class="text-xl md:text-2xl font-bold text-orange-400">∞</div>
              <div class="text-xs md:text-sm text-gray-400">Passion</div>
            </div>
          </div>
        </div>
      </div>


    </div>
  </section>

  <!-- Technical Skills Section -->
  <section id="skills" class="max-w-7xl mx-auto mt-24 md:mt-32 px-4 md:px-6 scroll-mt-24">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500 mb-4">
        Technical Skills
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-cyan-400 to-blue-500 mx-auto rounded-full"></div>
    </div>
    
    <!-- All Skills in One Grid -->
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 xl:grid-cols-6 gap-4 md:gap-6">
      <!-- Frontend Skills -->
      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-orange-400 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-orange-500/20 group">
        <i class="fab fa-html5 w-12 h-12 flex items-center justify-center text-4xl md:text-5xl transition-transform duration-300 group-hover:scale-110 text-orange-500"></i>
        <span class="text-gray-200 font-semibold text-sm md:text-base">HTML5</span>
      </div>

      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-blue-400 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-blue-500/20 group">
        <i class="fab fa-css3-alt w-12 h-12 flex items-center justify-center text-4xl md:text-5xl transition-transform duration-300 group-hover:scale-110 text-blue-500"></i>
        <span class="text-gray-200 font-semibold text-sm md:text-base">CSS3</span>
      </div>

      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-yellow-400 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-yellow-500/20 group">
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/javascript/javascript-original.svg" class="w-12 h-12 transition-transform duration-300 group-hover:scale-110" alt="JavaScript" />
        <span class="text-gray-200 font-semibold text-sm md:text-base">JavaScript</span>
      </div>

      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-yellow-400 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-yellow-500/20 group">
      <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/java/java-original.svg" class="w-12 h-12 transition-transform duration-300 group-hover:scale-110" alt="Java" />
        <span class="text-gray-200 font-semibold text-sm md:text-base">Java</span>
      </div>

      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-blue-600 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-blue-600/20 group">
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/typescript/typescript-original.svg" class="w-12 h-12 transition-transform duration-300 group-hover:scale-110" alt="TypeScript" />
        <span class="text-gray-200 font-semibold text-sm md:text-base">TypeScript</span>
      </div>

      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-cyan-400 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-cyan-500/20 group">
       <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/react/react-original.svg" class="w-12 h-12 transition-transform duration-300 group-hover:scale-110" alt="React" />
        <span class="text-gray-200 font-semibold text-sm md:text-base">React</span>
      </div>

      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-orange-600 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-orange-600/20 group">
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/astro/astro-original.svg" class="w-12 h-12 transition-transform duration-300 group-hover:scale-110" alt="Astro" />
        <span class="text-gray-200 font-semibold text-sm md:text-base">Astro</span>
      </div>

      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-cyan-500 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-cyan-600/20 group">
            <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/tailwindcss/tailwindcss-original.svg" class="w-12 h-12 transition-transform duration-300 group-hover:scale-110" alt="TailwindCSS" />
        <span class="text-gray-200 font-semibold text-sm md:text-base">TailwindCSS</span>
        
      </div>

      <!-- Backend Skills -->
      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-blue-400 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-blue-500/20 group">
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/python/python-original.svg" class="w-12 h-12 transition-transform duration-300 group-hover:scale-110" alt="Python" />
        <span class="text-gray-200 font-semibold text-sm md:text-base">Python</span>
      </div>

      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-purple-400 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-purple-500/20 group">
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/csharp/csharp-original.svg" class="w-12 h-12 transition-transform duration-300 group-hover:scale-110" alt="C#" />
        <span class="text-gray-200 font-semibold text-sm md:text-base">C#</span>
      </div>

      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-blue-500 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-blue-500/20 group">
      <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/cplusplus/cplusplus-original.svg" class="w-12 h-12 transition-transform duration-300 group-hover:scale-110" alt="C++" />
        <span class="text-gray-200 font-semibold text-sm md:text-base">C++</span>
      </div>

      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-blue-600 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-blue-600/20 group">
            <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/mysql/mysql-original.svg" class="w-12 h-12 transition-transform duration-300 group-hover:scale-110" alt="MySQL" />
        <span class="text-gray-200 font-semibold text-sm md:text-base">MySQL</span>
      </div>

      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-green-400 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-green-500/20 group">
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/nodejs/nodejs-original.svg" class="w-12 h-12 transition-transform duration-300 group-hover:scale-110" alt="Node.js" />
        <span class="text-gray-200 font-semibold text-sm md:text-base">Node.js</span>
      </div>

      <!-- Tools & Others -->
      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-orange-500 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-orange-500/20 group">
        <i class="fab fa-git-alt w-12 h-12 flex items-center justify-center text-4xl md:text-5xl transition-transform duration-300 group-hover:scale-110 text-orange-500"></i>
        <span class="text-gray-200 font-semibold text-sm md:text-base">Git</span>
      </div>

      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-gray-300 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-gray-500/20 group">
        <i class="fab fa-github w-12 h-12 flex items-center justify-center text-4xl md:text-5xl transition-transform duration-300 group-hover:scale-110 text-gray-300"></i>
        <span class="text-gray-200 font-semibold text-sm md:text-base">GitHub</span>
      </div>

      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-white transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-white/20 group">
        <i class="fab fa-unity w-12 h-12 flex items-center justify-center text-4xl md:text-5xl transition-transform duration-300 group-hover:scale-110 text-white"></i>
        <span class="text-gray-200 font-semibold text-sm md:text-base">Unity</span>
      </div>

      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-blue-500 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-blue-500/20 group">
      <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/vscode/vscode-original.svg" class="w-12 h-12 transition-transform duration-300 group-hover:scale-110" alt="VS Code" />
        <span class="text-gray-200 font-semibold text-sm md:text-base">VS Code</span>
      </div>

      <div class="skill-item flex flex-col items-center gap-3 md:gap-4 p-4 md:p-6 bg-gray-800/60 backdrop-blur-sm rounded-2xl border border-gray-700 hover:border-purple-400 transition-all duration-500 hover:bg-gray-700/50 hover:scale-105 hover:shadow-xl hover:shadow-purple-500/20 group">
        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/icons/figma/figma-original.svg" class="w-12 h-12 transition-transform duration-300 group-hover:scale-110" alt="Figma" />
        <span class="text-gray-200 font-semibold text-sm md:text-base">Figma</span>
      </div>
    </div>
  </section>

  <section id="projects" class="max-w-5xl mx-auto mt-24 md:mt-32 px-4 md:px-6 scroll-mt-24">
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500 mb-4">
        My Projects
      </h2>
      <div class="w-24 h-1 bg-gradient-to-r from-cyan-400 to-blue-500 mx-auto rounded-full"></div>
    </div>

    <div class="grid sm:grid-cols-1 md:grid-cols-2 gap-8 md:gap-10">
      {projects.map((p) => (
        <div
          class="relative group border border-gray-700 rounded-2xl overflow-hidden bg-gray-800 hover:border-cyan-400 transition duration-500 shadow-lg hover:shadow-cyan-500/30"
        >
          <div class="relative overflow-hidden">
            <img
              src={p.img}
              alt={p.name}
              class="w-full h-48 md:h-64 object-cover transform group-hover:scale-110 transition duration-500 ease-out"
            />

            <a
              href={p.url}
              target="_blank"
              rel="noopener"
              class="absolute inset-0 flex justify-center items-center bg-black/60 backdrop-blur-sm opacity-0 group-hover:opacity-100 transition-all duration-500"
